<% if @config.has_key?('whitelist_addresses') %>
# Whitelisted addresses (i.e. developers/testing)
<% for @address in @config['whitelist_addresses'] %>
/<%= @address %>/ <%= @address %>
<% end %>

<% end %>

<% if @config.has_key?('whitelist_domains') %>
# Whitelisted domains...
<% for @domain in @config['whitelist_domains'] %>
/(.+)@<%= @domain %>/ <%= @domain %>
<% end %>

<% end %>

# Dump anything else in a designated local user's mail folder
/.+@.+/	<%= @config['default_recipient'] %>
